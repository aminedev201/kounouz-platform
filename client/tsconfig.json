{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/context/AuthProvider.jsx", "src/app/dashboard/home.tsx", "src/app/dashboard/layout.jsx", "src/app/layout.jsx", "src/app/dashboard/home/page.jsx", "src/components/ui/alert/AlertMessage.jsx", "src/app/(vendor)/dashboard/products/show/[id]/ProductDetail.jsx", "src/app/(vendor)/dashboard/products/show/[id]/page.jsx", "src/app/(vendor)/dashboard/products/[id]/page.jsx", "src/components/header/UserDropdown.jsx", "src/app/(user)/page.jsx"],
  "exclude": ["node_modules"]
}
